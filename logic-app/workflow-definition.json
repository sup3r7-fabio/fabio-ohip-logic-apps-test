{
  "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "triggers": {
    "When_a_message_is_received_in_a_topic_subscription": {
      "type": "ApiConnection",
      "inputs": {
        "host": {
          "connection": {
            "name": "@parameters('$connections')['servicebus']['connectionId']"
          }
        },
        "path": "/topics/bookings/subscriptions/processing-sub/messages",
        "method": "get",
        "recurrence": {
          "frequency": "Minute",
          "interval": 1
        }
      }
    }
  },
  "actions": {
    "Parse_JSON": {
      "type": "ParseJson",
      "inputs": {
        "content": "@triggerBody()",
        "schema": {
          "type": "object",
          "properties": {
            "bookingId": { "type": "string" },
            "guestName": { "type": "string" }
          }
        }
      },
      "runAfter": {}
    },
    "Log_Booking": {
      "type": "Http",
      "inputs": {
        "method": "POST",
        "uri": "https://httpbin.org/post",
        "body": "@body('Parse_JSON')"
      },
      "runAfter": {
        "Parse_JSON": [
          "Succeeded"
        ]
      }
    }
  },
  "outputs": {}
}
